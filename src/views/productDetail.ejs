            <main>
                <% for (let i=0; i < books.length; i++) { %>
                    <% if(idBook == books[i].id){ %>
                <section>
                    <div class="contenedor">
                        <div class="columna-a-derecha">
                            <h1 class="productTitle">
                                <%= books[i].title %>
                            </h1>
                            <div class="rating">
                                <span class="fa fa-star checked"></span>
                                <span class="fa fa-star checked"></span>
                                <span class="fa fa-star checked"></span>
                                <span class="fa fa-star checked"></span>
                                <span class="fa fa-star"></span>
                                <span>(99)</span>
                            </div>
                            <div class="columna-a-izquierda">
                                <div class="compartirIcono">
                                    <span class="material-symbols-outlined">
                                        share
                                    </span>
                                </div>
                                <div class="divImagen">
                                    <img class="imagenProducto" src="/images/products/<%= books[i].img %>" alt="imagen">
                                </div>
                            </div>

                            <!-- <div class="format">
